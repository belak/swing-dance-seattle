{
  "rules": {
    ".read": true,
    ".write": "auth != null",
    "classes": {
      ".validate": "newData.hasChildren(['approved', 'category', 'link', 'name', 'neighborhood', 'recurrenceDay', 'recurrenceTime', 'time', 'venue'])"
    },
    "dances": {
      ".validate": "newData.hasChildren(['approved', 'category', 'link', 'name', 'neighborhood', 'recurrenceDay', 'recurrenceTime', 'time', 'venue'])"
    },
    "events": {
      ".indexOn": ["dateStart"],
      ".validate": "newData.hasChildren(['approved', 'category', 'dateEnd', 'dateStart', 'link', 'name', 'neighborhood', 'time', 'venue'])"
    },
    "workshops": {
      ".indexOn": ["dateStart"],
      ".validate": "newData.hasChildren(['approved', 'category', 'dateEnd', 'dateStart', 'link', 'name', 'neighborhood', 'time', 'venue'])"
    }
  }
}
